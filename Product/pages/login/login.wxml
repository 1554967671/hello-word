<modal hidden="{{isLogin}}" title="账号登陆" confirm-text="提交" cancel-text="重置" bindcancel="cancel" bindconfirm="confirm">
  <view>
    <input class='username' type='text' placeholder='邮箱/手机号' bindinput='userNameInput'/>
  </view>
  <view>
    <input class='password' type='password' placeholder='密码' bindinput='passInput'/>
  </view>
  <view>
    <input class='code' type='text' placeholder='验证码' bindinput='codeInput'/>
    <image bindtap='changeCode' class='yz-code' src='{{code_url}}'></image>
  </view>
</modal>
