/* pages/filmInfo/filmInfo.wxss */

.hidden_text{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 顶部样式 */
.head{
  width: 100%;
  height: 250px;
}
/* .head_img{
  position: absolute;
  width: 100%;
  height: 240px;
  background-repeat:no-repeat;
  background-size: 100%;
  filter:blur(8px);
} */
.head_bd{
  position: absolute;
  width: 100%;
  height: 250px;
  background: #5B5B5B;
  /* background: radial-gradient(rgba(81,81,81,.3),rgba(54,54,54,.8)); */
}

/* 顶部的上半部分 */
.head-bd-top{
  width: 100%;
  height: 190px;
}
.top-left{
  float: left;
  width:38%;
  height: 190px;
  display: flex;
  align-items: center;
}
.top-left image{
  float: left;
  margin-left: 18px;
  width:80%;
  height: 165px;
}
.top-mid{
  float: left;
  width:48%;
  height: 190px;
  display: flex;
  align-items: center;
}
.top-mid-bd{
  width:100%;
  height: 165px;
}
.film-title{
  width: 100%;
  height: 27px;
  margin-top: -3px;
  color: white;
  font-size: 20px;
}
.film-ename{
  width: 100%;
  height: 20px;
  color: white;
  font-size: 12px;
}
.film-score{
  width: 100%;
  height: 38px;
}
.score{
  float: left;
  margin-top: 5px;
  font-size: 18px;
  color: #EEC900;
}
.scorenum{
  float: left;
  margin-top: 13px;
  font-size: 10px;
  color: #CCCCCC;
}
.noscore{
  width: 100%;
  height: 30px;
  font-size: 13px;
  line-height: 28px;
  color: #CCCCCC;
}

.top_s{
  margin-top: 2px;
}
.top_h{
  margin-top: 8px;
}

.cate-type{
  width: 100%;
  height: 20px;
}
.cate{
  float: left;
  font-size: 14px;
  color: #CFCFCF;
}
.xd-imax{
  float: left;
  margin-left: 4px;
  margin-top: 2px;
  width:60px;
  height: 13px;
}
.xd{
  float: left;
  width:15px;
  height: 13px;
  font-size: 10px;
  color: white;
  line-height: 14px;
  padding-left: 2px;
  background: #9AC0CD;
  border: 1px solid #9AC0CD;
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
}
.imax{
  float: left;
  width:26px;
  height: 13px;
  line-height: 14px;
  padding-left: 2px;
  font-size: 10px;
  border: 1px solid #9AC0CD;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
  color: #9AC0CD;
}
.nd{
  margin-left: 4px;
  width:15px;
  height: 13px;
  font-size: 10px;
  color: white;
  line-height: 14px;
  padding-left: 2px;
  background: #9AC0CD;
  border: 1px solid #9AC0CD;
  border-radius: 3px;
}
.local_time,.date,.caidan{
  width: 100%;
  float: left;
  font-size: 14px;
  color: #CFCFCF;
}
.caidan image{
  float: left;
  margin-top: 3px;
  width: 14px;
  height: 14px;
}

/* 显示详情的按钮样式 */
.top-right{
  float: left;
  width:14%;
  height: 190px;
  display: flex;
  align-items: center;
}
.right_btn{
  width:40px;
  height: 40px;
  border-radius: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #8a8a8a;
}
.right_btn:active{
  background: #707070;
}
.right_btn image{
  width:22px;
  height: 22px;
}

/* 顶部按钮区域 */
.head-bd-bottom{
  width: 100%;
  height: 60px;
}
.want_btn,.score_btn{
  width: 44%;
  height: 36px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #808080;
  border-radius: 4px;
}
.want_btn{
  float: left;
  margin-left: 18px;
  margin-top: 3px;
}
.want_btn:active,.score_btn:active{
  background:  #707070;
}
.score_btn{
  float: right;
  margin-right: 18px;
  margin-top: 3px;
}
.want_btn_icon{
  width: 16px;
  height: 16px;
}
.want_btn_text{
  color: whitesmoke;
  margin-left: 8px;
  margin-top: 1px;
  font-size:16px;
}

/* 时间轴 */
.dateline{
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #E0E0E0;
}
.date_bd{
  width: 28%;
  height: 48px;
  font-size: 15px;
  line-height: 48px;
  text-align: center;
  display:inline-block;
  /* border-bottom: 1px solid #E0E0E0; */
}

/* 筛选条件 */
.factors{
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #E8E8E8;
}

.city,.brand,.character{
  float: left;
  width: 33%;
  height: 40px;
  background: #9AC0CD;
}
.line{
  float: left;
  width: 0.5%;
  height: 40px;

}

















