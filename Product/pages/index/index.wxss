/**index.wxss**/

.index-head{
  width: 100%;
  height: 50px;
  background: #FAFAFA;
}
.head-left{
  float: left;
  width: 20%;
  height: 50px;
}
.show-city{
  float: left;
  margin-top: 14px;
  width: 100%;
  height: 30px;
  align-items: center;
}
.show-city image{
  position: absolute;
  margin-left: 12px;
  margin-top: -1px;
  width: 25px;
  height: 25px;
}
.city{
  float: left;
  width: 80%;
  height: 20px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 32px;
  font-size: 16px;
}

.search:active{
  background: #C4C4C4;
}
.search image{
  width: 30px;
  height: 30px;
}
.head-mid{
  float: left;
  width: 60%;
  height: 50px;
}
.mid-tab{
  float: left;
  width: 50%;
  height: 50px;
}
.choose-tab{
  float:left;
  height: 48px;
  width: 60%;
  text-align: center;
  line-height: 51px;
  font-size: 18px;
}
.choose-ok{
  color: #FF4500;
  border-bottom: 2px solid #FF4500;
}
.search{
  float: right;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 50px;
  border-left:1px solid #E8E8E8;
}

/* 轮播图 */
.index-lb{
  width: 100%;
  height: 120px;
}
.index-lb swiper{
  width:100%;
  height: 100%;
}
.index-lb swiper image{
  width:100%;
  height: 100%;
}

/* 活动区 */

.bor-radio{
  border-radius: 50%;
}
.act-lab{
  width: 34px;
  height: 16px;
  position: absolute;
  margin-top:14px;
  margin-left: 64px;
  font-size: 12px;
  line-height: 16px;
  text-align: center;
  background: red;
  color: white;
  border-radius: 40px 40px 40px 40px;
}

.index-active{
  width: 100%;
  height: 100px;
}
.activity{
  float: left;
  width:25%;
  height: 100px;
}
.activity-img{
  float: left;
  display: flex;
  justify-content: center;
  width:100%;
  height: 80px;
}

.activity-img image{
  width:60px;
  height: 60px;
  margin-top: 16px;
  border-radius: 50%;
}
.activity-text{
  float: left;
  width: 100%;
  height: 20px;
  font-size: 12px;
  line-height: 20px;
  margin-top: 2px;
  text-align: center;
  color: #707070;
}

.index-extend{
  width:100%;
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #EAEAEA;
}
.extend{
  width:90%;
  height: 64px;
  border-radius: 64px 64px 64px 64px;
}
.extend image{
  width: 100%;
  height: 64px;
  border-radius: 64px 64px 64px 64px;
}

/* 电影列表样式 */
.film{
  width:730rpx;
  height: 120px;
  float: right;
  border-bottom: 1px solid #EAEAEA;
  display: flex;
  align-items: center;
}
.film-bg{
  width: 100%;
  height: 100px;
}

/* 电影图片 */
.film-img{
  float: left;
  width:20%;
  height: 100%;
}
.film-img image{
  width: 100%;
  height: 100%;
}

/* 电影文字信息 */
.film-text{
  float: left;
  margin-left: 2%;
  width:60%;
  height: 100%;
}
.film-title,.film-score,.film-actor,.film-note{
  display: flex;
  align-items: center;
  width: 100%;
  height: 24px;
}

/* 电影title */
.film-title{
  font-size: 18px;
}
.xd-imax{
  margin-left: 4px;
  width:60px;
  height: 13px;
}
.xd{
  float: left;
  width:15px;
  height: 13px;
  font-size: 10px;
  color: white;
  line-height: 14px;
  padding-left: 2px;
  background: #9AC0CD;
  border: 1px solid #9AC0CD;
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
}
.imax{
  float: left;
  width:26px;
  height: 13px;
  line-height: 14px;
  padding-left: 2px;
  font-size: 10px;
  border: 1px solid #9AC0CD;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
  color: #9AC0CD;
}
.nd{
  margin-left: 4px;
  width:15px;
  height: 13px;
  font-size: 10px;
  color: white;
  line-height: 14px;
  padding-left: 2px;
  background: #9AC0CD;
  border: 1px solid #9AC0CD;
  border-radius: 3px;
}

/* 电影评分 */
.no-score{
  float: left;
  color: #D1D1D1;
  font-size: 15px;
}
.score{
  float: left;
  font-size: 14px;
}

/* 主演 */
.actor{
  font-size: 14px;
  color: #707070;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* note */
.note{
  font-size: 14px;
  color: #999999;
}

/* 按钮样式 */
.film-btn{
  float: left;
  width:18%;
  height: 100%;
  display: flex;
  align-items: center;
}
.buy-btn{
  margin-left: 4px;
  width: 74%;
  height: 36px;
  text-align: center;
  line-height: 36px;
  font-size: 15px;
  color: white;
  background: red;
  border-radius: 3px;
}

















